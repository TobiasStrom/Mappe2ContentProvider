<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hoved_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tobiasstrom.mappe2contentprovider.MainActivity">

    <EditText
        android:id="@+id/tittel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/getAllContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hent Alle"
        android:onClick="getAllContact" />
    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hent bare en"
        android:onClick="getOneContact" />

    <TextView android:id="@+id/showContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>